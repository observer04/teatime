# ==============================================================================
# TeaTime Environment Variables
# ==============================================================================
# Copy this file to .env and fill in real values for production
# For local development, docker-compose.yml has sensible defaults
# ==============================================================================

# App Environment
APP_ENV=development

# Server
SERVER_ADDR=:8080

# Database (Postgres)
DATABASE_URL=postgres://teatime:teatime@localhost:5432/teatime?sslmode=disable

# URLs
APP_BASE_URL=http://localhost:5173
API_BASE_URL=http://localhost:8080

# ==============================================================================
# Auth (Required for Stage 2+)
# ==============================================================================

# JWT signing key (generate with: openssl rand -base64 32)
JWT_SIGNING_KEY=

# GitHub OAuth (create at: https://github.com/settings/developers)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth (optional, create at: https://console.developers.google.com/)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
